{
  "name": "pizzapp",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "client": "cd app && npm start",
    "server": "nodemon ./src/api/start.js",
    "build": "cd ./app && npm install && npm run build",
    "start": "concurrently \"node ./src/api/start.js\" \"npm run build\"",
    "start-dev": "concurrently --kill-others \"npm run server\" \"npm run client\"",
    "test": "npx jest --verbose ./test",
    "watch": "npx jest --watchAll --verbose ./test",
    "coverage": "npx jest --collectCoverage --verbose ./test",
    "e2e-test-dev": "concurrently --kill-others \"npm run server\" \"npm run client\" \"npx cypress run\""
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "babel-jest": "^26.6.0",
    "cypress": "^8.4.1",
    "jest": "^26.6.0",
    "nodemon": "^2.0.13",
    "supertest": "^6.1.6"
  },
  "dependencies": {
    "concurrently": "^6.2.1",
    "body-parser": "^1.19.0",
    "express": "^4.17.1",
    "joi": "^17.4.2"
  }
}
